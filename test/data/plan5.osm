<?xml version="1.0" encoding="UTF-8"?>
<osm version="0.6" generator="Example for Simple Indoor Tagging">
  <bounds minlat="52.52" minlon="13.405" maxlat="52.521" maxlon="13.406"/>
  
  <!-- Door node (shared between room and wall) -->
  <node id="1" lat="52.5205" lon="13.4055" version="1">
    <tag k="door" v="yes"/>
    <tag k="level" v="0"/>
  </node>
  
  <!-- Wall way (non-passable wall) -->
  <way id="2" version="1">
    <nd ref="1"/>
    <nd ref="3"/>
    <tag k="indoor" v="wall"/>
    <tag k="level" v="0"/>
  </way>
  
  <!-- Room area (closed way: square room ~10m x 10m, approximate coords) -->
  <way id="4" version="1">
    <nd ref="1"/>  <!-- Door as one corner -->
    <nd ref="5"/>
    <nd ref="6"/>
    <nd ref="3"/>
    <nd ref="1"/>  <!-- Closed -->
    <tag k="indoor" v="room"/>
    <tag k="name" v="Example Room"/>
    <tag k="level" v="0"/>
    <tag k="building" v="yes"/>  <!-- For outer building context -->
  </way>
  
  <!-- Auxiliary nodes for geometry -->
  <node id="3" lat="52.5200" lon="13.4055" version="1"/>
  <node id="5" lat="52.5205" lon="13.4060" version="1"/>
  <node id="6" lat="52.5210" lon="13.4060" version="1"/>
</osm>